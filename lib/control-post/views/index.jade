extend ../../views/layout

block content
  include ../../views/partial-post
  #app-post-comments
    form(method="POST", action="")
      .control-groups
        input#id_name.span6(type="text", name="name", placeholder="Nome")
      .control-groups
        textarea#id_comment.span6(, name="comment", placeholder="Coment√°rio")
      .row-fluid
        .span6
          button.btn.btn-primary.pull-right(type="submit") Comentar
    if post.comments
      .app-comments
        each comment in post.comments
          .app-comment
            span.push-right.muted
              | #{comment.name} ' ('
              | #{comment.createdAt().toISOString().split('T')[0]}
            .app-comment-body
              | #{comment.comment}
