article
  header
    time.pull-right.muted.app-article-pubdate(pubdate, datetime=#{post.createdAt.toISOString()})
      | #{post.createdAt.toISOString().split('T')[0]}
    h2 #{post.title}
    .row-fluid.app-article-meta
      .span10
        ul.inline
          li
            i.icon-tags.muted(title='tags')
          each tag in post.tags
            li: a.label.label-info.app-article-tag(href='tags/') #{tag}
      .pull-right
        i.icon-fixed-width.icon-comment.muted(title='coment√°rios')
        a.badge.app-article-comment-count(href='/post/#{post.slug}#comentarios')
          if post.comments
            | #{post.comments.length}
          else
            | 0
  != post.body
  footer
    p: a.btn(href='/post/#{post.slug}') Leia mais
