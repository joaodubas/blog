article
  header
    time.pull-right.muted.app-article-pubdate(pubdate, datetime=#{post.publishAt.toISOString()})
      | #{post.publishAt.toISOString().split('T')[0]}
    h2 #{post.title}
  != post.body
  footer
    p: a(href='/post/#{post.slug}') Leia mais
    .row-fluid.app-article-meta
      .span8 Tags
        ul.inline
          each tag in post.tags
            li: a.label.label-info.app-article-tag(href='tags/') #{tag}
      .span4 Coment√°rios&nbsp;
        span.badge.app-article-comment-count
          if post.comments
            | #{post.comments.length}
          else
            | 0
